<header class="header">
  <div class="header__logo">
    <a href="/" title="Homepage">
      <picture>
        {% if logoDark %}
          <source
            media="(prefers-color-scheme: dark)"
            srcset="https://assets.christianhain.com/images/xianhain-logo-{{ logoDark }}.svg"
          />
        {% endif %}

        <img
          alt="@XianHain | Christian Hain"
          src="https://assets.christianhain.com/images/xianhain-logo-{{ logo }}.svg"
          width="256"
          height="64"
        >
      </picture>
    </a>
  </div>

  <div class="header__chrome">
    <div class="header__fixed-chrome-content">
      <svg class="header__bar">
        <defs>
          <linearGradient id="header-shadow" x1="0" y1="0" x2="0" y2="1">
            <stop class="header__bar__stop-0" offset="0%" />
            <stop class="header__bar__stop-1" offset="100%" />
          </linearGradient>
        </defs>
        <rect class="header__bar__solid-bar" width="100%" height="40"></rect>
        <rect
          fill="url(#header-shadow)"
          class="header__bar__shadow-gradient header__bar__shadow-gradient--0"
          width="100%"
          height="40"
        ></rect>
        <rect
          fill="url(#header-shadow)"
          class="header__bar__shadow-gradient header__bar__shadow-gradient--1"
          width="100%"
          height="20"
        ></rect>
      </svg>
      <div class="header__menu">
        {% include "./menu.liquid" %}
      </div>
    </div>
  </div>

</header>
