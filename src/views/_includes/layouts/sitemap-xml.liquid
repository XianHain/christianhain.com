<?xml version="1.0" encoding="utf-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {% for page in collections.all %}
    <url>
      <loc>{{ site.url }}{{ page.url | url }}</loc>
      <lastmod>
        {% if page.data.blogpost %}
          {{ page.data.blogpost.publishedAt | date: "%Y-%m-%dT%H:%M:%S%z" }}
        {% elsif page.lastUpdated %}
          {{ page.lastUpdated | date: "%Y-%m-%dT%H:%M:%S%z" }}
        {% else %}
          {{ page.date | date: "%Y-%m-%dT%H:%M:%S%z" }}
        {% endif %}
      </lastmod>
    </url>
  {% endfor %}
</urlset>
